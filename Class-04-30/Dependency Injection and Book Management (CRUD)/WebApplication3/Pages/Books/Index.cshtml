@page
@model WebApplication3.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form method="get">
    <div class="form-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search by title or author" />
        <input type="submit" value="Search" class="btn btn-primary mt-2" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@book.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>