@model SareeClientApp.Models.Saree

@{
    ViewData["Title"] = "Delete Saree";
}

<h1>Delete Confirmation</h1>
<h3 class="text-danger">Are you sure you want to delete this saree?</h3>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
    <p><a asp-action="Index">Back to List</a></p>
}
else
{
    <div>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" alt="@Html.DisplayFor(model => model.Name)" style="max-width: 150px; max-height: 150px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Material)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" /> @* Send the ID back on POST *@
            <input type="submit" value="Delete Forever" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}